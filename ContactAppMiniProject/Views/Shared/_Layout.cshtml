    <!-- CSS files -->
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/jquery.jqGrid/ui.jqgrid.css" rel="stylesheet" />

    <!-- JavaScript files -->
    <script src="~/Scripts/jquery-3.7.1.min.js"></script> <!-- jQuery first -->
    <script src="~/Scripts/jquery.jqGrid.min.js"></script>
    <script src="~/Scripts/i18n/grid.locale-en.js"></script>

    <!-- Bootstrap JS (use only the bundle which includes Popper.js) -->
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>

    <!-- jQuery Validation and Unobtrusive Validation -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>


</head>
<body>
    <div class="navbar navbar-dark bg-black navbar-fixed-top p-3">
        <div class="display-1" style="margin-left:35%; color:aliceblue">My Contacts</div>

        <div class="container">
            @if (User.Identity.IsAuthenticated)
            {
                <div class="display-6 text-light" style="float:left">Welcome @User.Identity.Name.ToUpper() !</div>
                <div style="float:right">@Html.ActionLink("Logout", "logout", "user", new { area = "" }, new { @class = "navbar-brand display-1" })</div>
            }

        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>



</body>
</html>